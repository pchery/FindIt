        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StartSpeechRecognitionActivity"
            android:label="@string/title_activity_start_speech_recognition"/>


        <activity
            android:name=".StartSpeechActivity"
            android:label="@string/title_activity_start_speech"/>

